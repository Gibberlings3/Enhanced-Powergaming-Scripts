///////////////////////////////////////////////////////////////////////////
// Copy .BS files to scripts folder                                      //
///////////////////////////////////////////////////////////////////////////

ACTION_IF (MOD_IS_INSTALLED ~setup-spell_rev.tp2~ ~0~) BEGIN
	COPY ~powergamingscripts/baf/Accelerated/SR/Archer.baf~      ~scripts/Archer.bs~
	     ~powergamingscripts/baf/Accelerated/SR/Divine.baf~      ~scripts/Divine.bs~
	     ~powergamingscripts/baf/Accelerated/SR/FigMage.baf~     ~scripts/FigMage.bs~
	     ~powergamingscripts/baf/Accelerated/SR/Paladin.baf~     ~scripts/Paladin.bs~
	     ~powergamingscripts/baf/Accelerated/SR/Monk.baf~        ~scripts/Monk.bs~
	     ~powergamingscripts/baf/Accelerated/SR/Skald.baf~       ~scripts/Skald.bs~
	     ~powergamingscripts/baf/Accelerated/SR/Sorcerer.baf~    ~scripts/Sorcerer.bs~
	     ~powergamingscripts/baf/Accelerated/SR/BasicAI.baf~     ~scripts/BasicAI.bs~
	  COMPILE_BAF_TO_BCS
END
ELSE ACTION_IF (MOD_IS_INSTALLED ~setup-stratagems.tp2~ ~1500~ && MOD_IS_INSTALLED ~setup-stratagems.tp2~ ~1510~) || (MOD_IS_INSTALLED ~iwdification/setup-iwdification.tp2~ 30 && MOD_IS_INSTALLED ~iwdification/setup-iwdification.tp2~ 40) BEGIN
	COPY ~powergamingscripts/baf/Accelerated/IWD/Archer.baf~      ~scripts/Archer.bs~
	     ~powergamingscripts/baf/Accelerated/IWD/Divine.baf~      ~scripts/Divine.bs~
	     ~powergamingscripts/baf/Accelerated/IWD/FigMage.baf~     ~scripts/FigMage.bs~
	     ~powergamingscripts/baf/Accelerated/IWD/Paladin.baf~     ~scripts/Paladin.bs~
	     ~powergamingscripts/baf/Accelerated/IWD/Monk.baf~        ~scripts/Monk.bs~
	     ~powergamingscripts/baf/Accelerated/IWD/Skald.baf~       ~scripts/Skald.bs~
	     ~powergamingscripts/baf/Accelerated/IWD/Sorcerer.baf~    ~scripts/Sorcerer.bs~
	     ~powergamingscripts/baf/Accelerated/IWD/BasicAI.baf~     ~scripts/BasicAI.bs~
	  COMPILE_BAF_TO_BCS
END
ELSE BEGIN
	COPY ~powergamingscripts/baf/Accelerated/Archer.baf~      ~scripts/Archer.bs~
	     ~powergamingscripts/baf/Accelerated/Divine.baf~      ~scripts/Divine.bs~
	     ~powergamingscripts/baf/Accelerated/FigMage.baf~     ~scripts/FigMage.bs~
	     ~powergamingscripts/baf/Accelerated/Paladin.baf~     ~scripts/Paladin.bs~
	     ~powergamingscripts/baf/Accelerated/Monk.baf~        ~scripts/Monk.bs~
	     ~powergamingscripts/baf/Accelerated/Skald.baf~       ~scripts/Skald.bs~
	     ~powergamingscripts/baf/Accelerated/Sorcerer.baf~    ~scripts/Sorcerer.bs~
	     ~powergamingscripts/baf/Accelerated/BasicAI.baf~     ~scripts/BasicAI.bs~
	  COMPILE_BAF_TO_BCS
END
