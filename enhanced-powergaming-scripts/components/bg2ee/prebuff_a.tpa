	INCLUDE ~enhanced-powergaming-scripts/lib/core_hotkey.tph~

///////////////////////////////////////////////////////////////////////////
// SR - Remove Dialog Hovertext from Scripts                             //
///////////////////////////////////////////////////////////////////////////
	ACTION_IF scp_dlg BEGIN
		INCLUDE ~enhanced-powergaming-scripts/lib/ini/prebuff_dialog.tph~
	END

///////////////////////////////////////////////////////////////////////////
