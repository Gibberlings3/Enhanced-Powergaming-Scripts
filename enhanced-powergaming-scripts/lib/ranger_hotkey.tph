///////////////////////////////////////////////////////////////////////////
///////////////////////////////////////////////////////////////////////////

///////////////////////////////////////////////////////////////////////////
// Update Hotkey Buffing                                                 //
///////////////////////////////////////////////////////////////////////////
  SPRINT value_buff EVAL "%hot_key_Buffing%"

  LPF REPLACE_MULTILINE
    INT_VAR
    strict = 1
    verbose = 0
    STR_VAR
    pattern = ~~~~~HotKey(hot_key_Buffing)~~~~~
    string = ~~~~~HotKey(%value_buff%)~~~~~ //"
  END

///////////////////////////////////////////////////////////////////////////
// Update Hotkey Cowled Check                                            //
///////////////////////////////////////////////////////////////////////////
  SPRINT value_cowled EVAL "%hot_key_CowledCheck%"

  LPF REPLACE_MULTILINE
    INT_VAR
    strict = 1
    verbose = 0
    STR_VAR
    pattern = ~~~~~HotKey(hot_key_CowledCheck)~~~~~
    string = ~~~~~HotKey(%value_cowled%)~~~~~ //"
  END
