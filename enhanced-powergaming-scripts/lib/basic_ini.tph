COPY ~enhanced-powergaming-scripts/baf/upload/mobasic.baf~ ~enhanced-powergaming-scripts/baf/upload/mobasic.baf~

///////////////////////////////////////////////////////////////////////////
///////////////////////////////////////////////////////////////////////////
// Update Hotkeys                                                        //
///////////////////////////////////////////////////////////////////////////
///////////////////////////////////////////////////////////////////////////

///////////////////////////////////////////////////////////////////////////
// Update Hotkey Turn Undead                                             //
///////////////////////////////////////////////////////////////////////////
  SPRINT value_turn EVAL "%hot_key_TurnUndead%"

  LPF REPLACE_MULTILINE
    INT_VAR
    strict = 1
    verbose = 0
    STR_VAR
    pattern = ~~~~~HotKey(hot_key_TurnUndead)~~~~~
    string = ~~~~~HotKey(%value_turn%)~~~~~ //"
  END

///////////////////////////////////////////////////////////////////////////
// Update Hotkey Buffing                                                 //
///////////////////////////////////////////////////////////////////////////
  SPRINT value_buff EVAL "%hot_key_Buffing%"

  LPF REPLACE_MULTILINE
    INT_VAR
    strict = 1
    verbose = 0
    STR_VAR
    pattern = ~~~~~HotKey(hot_key_Buffing)~~~~~
    string = ~~~~~HotKey(%value_buff%)~~~~~ //"
  END

///////////////////////////////////////////////////////////////////////////
///////////////////////////////////////////////////////////////////////////
// Update ini Presets                                                    //
///////////////////////////////////////////////////////////////////////////
///////////////////////////////////////////////////////////////////////////

///////////////////////////////////////////////////////////////////////////
// Update Potion Use During Pre-Buffing                                  //
///////////////////////////////////////////////////////////////////////////
  LAF check_ini STR_VAR ini="buffing_potion_use" RET value_pot END
  ACTION_IF NOT value_pot BEGIN
    INCLUDE ~enhanced-powergaming-scripts/lib/ini/basic_pot.tph~
  END

///////////////////////////////////////////////////////////////////////////
// Update Basic AI to Attack                                             //
///////////////////////////////////////////////////////////////////////////
  LAF check_ini STR_VAR ini="basic_ai_auto_attack" RET value_atk END
  ACTION_IF NOT value_atk BEGIN
    INCLUDE ~enhanced-powergaming-scripts/lib/ini/basic_atk.tph~
  END
