///////////////////////////////////////////////////////////////////////////
// Update Hotkey Turn Undead                                             //
///////////////////////////////////////////////////////////////////////////
  SPRINT value_turn EVAL "%hot_key_TurnUndead%"

  LPF REPLACE_MULTILINE
    INT_VAR
    strict = 1
    verbose = 0
    STR_VAR
    pattern = ~~~~~HotKey(hot_key_TurnUndead)~~~~~
    string = ~~~~~HotKey(%value_turn%)~~~~~ //"
  END

