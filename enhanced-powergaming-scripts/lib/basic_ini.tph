    LPF REPLACE_MULTILINE
      INT_VAR
      strict = 1
      verbose = 0
      STR_VAR
      pattern = ~~~~~IF
  ActionListEmpty()
  Global("MO_TURNUNDEAD","LOCALS",1)
  !CheckStat(Myself,1,SANCTUARY)
  Class(Myself,CLERIC_ALL)
  !ModalState(TURNUNDEAD)
THEN
  RESPONSE #100
    Turn()
END~~~~~
      string = ~~~~~IF
